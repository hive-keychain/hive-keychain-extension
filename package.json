{
  "name": "hive-keychain",
  "version": "2.0.0",
  "description": "Hive Keychain extension",
  "main": "index.js",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "dev": "npm outdated; concurrently  \"npm:dev:*\"",
    "dev:chromium": "webpack --config webpack/chromium/webpack.dev.js -w",
    "dev:firefox": "webpack --config webpack/firefox/webpack.dev.js -w",
    "build": "npm outdated; concurrently  \"npm:build:*\"",
    "build:chromium": "rm -rf ./dist-prod & webpack --config webpack/chromium/webpack.prod.js",
    "build:firefox": "rm -rf ./dist-prod-firefox & webpack --config webpack/firefox/webpack.prod.js",
    "analyze": "concurrently  \"npm:analyze:*\"",
    "analyze:chromium": "npx webpack --profile --json > stats.json --config webpack/chromium/webpack.prod.js",
    "analyze:firefox": "npx webpack --profile --json > stats.json --config webpack/firefox/webpack.prod.js",
    "doc": "documentation build js/hive_keychain.js -f md -c documentation.yml -o README.md",
    "postinstall": "sed -i '' 's/require(\"cross-fetch\")/require(\"node-fetch\")/g' node_modules/@hiveio/dhive/lib/utils.js; echo 'Update dhive so that keychain background can use it directly'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoodkev/hive-keychain.git"
  },
  "keywords": [
    "hive",
    "keychain",
    "extension"
  ],
  "author": "stoodkev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stoodkev/hive-keychain/issues"
  },
  "homepage": "https://github.com/stoodkev/hive-keychain#readme",
  "dependencies": {
    "@crowdin/cli": "^3.7.8",
    "@hiveio/dhive": "^1.0.1",
    "@hiveio/hive-js": "^2.0.4",
    "@types/chrome": "^0.0.177",
    "@types/crypto-js": "^4.0.2",
    "axios": "^0.25.0",
    "crypto-js": "^4.1.1",
    "flatlist-react": "^1.5.0",
    "hive-tx": "^4.0.1",
    "joi": "^17.4.1",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "node-fetch": "^3.2.0",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "pretty-checkbox": "^3.0.3",
    "pretty-checkbox-react": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropdown-select": "^4.7.4",
    "react-qr-code": "^2.0.1",
    "react-redux": "^7.2.4",
    "react-tabs": "^3.2.3",
    "react-toastify": "^8.1.0",
    "react-tooltip": "^4.2.21",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "sscjs": "^0.0.9",
    "url-loader": "^4.1.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@types/md5": "^2.3.1",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-tabs": "^2.3.3",
    "@types/remote-redux-devtools": "^0.5.5",
    "babel-loader": "^8.0.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.1.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "dotenv": "^14.2.0",
    "node-sass": "^7.0.1",
    "react-hot-loader": "^4.13.0",
    "remote-redux-devtools": "^0.5.16",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.4",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "webpack": "^5.48.0",
    "webpack-bundle-analyzer": "^4.5.0",
